<!DOCTYPE html>
<html>
<head>
  <title>GoodLife</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
  <%= csrf_meta_tag %>
</head>
<body>
<div class="row">
  <%= navigation :main %>

  <div class="column grid_14">
    <% if user_signed_in? %>
        <%= current_user.name %> is logged in. Not you? Click <%= link_to "Sign Out", destroy_user_session_path, :method => 'delete' %>
    <% else %>
        <%= link_to "Register", new_user_registration_path %> or <%= link_to "Sign In", new_user_session_path %>
    <% end %>
    <p class="notice">
      <%= notice %>
      <% if user_signed_in? %>
        <%= link_to "Invite friends now!", new_user_invitation_path %>
      <% end %>
    </p>
    <p class="alert"><%= alert %></p>
  </div>
</div>
<div class="row">
  <div class="column grid_11">
    <h1>Good Life</h1>
    <%= yield %>
  </div>
  <div class="column grid_3">
  <% unless user_signed_in? %>
    <div class="row">
      <div class="column grid_3">
        <h3>most populate feats</h3>
        <div>
        <% Feat.limit(3).each do |f| %>
          <p>
          <span><%="!#{f.title}" %></span>
          <span><%="#{f.bonus_point} points" %></span>
          </p>
        <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="column grid_3">
        <h3>most populate rewards</h3>
        <div>
        <% Reward.limit(3).each do |r| %>
          <p>
          <span><%="$#{r.save_money} #{r.name}" %></span>
          </p>
        <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
       <div class="column grid_3">
         <h3>my team ranking</h3>
         <% @my_team.each do |m| %>
          <p>
          <span><%= "#{m.name} #{m.sign_in_count}" %></span>
          </p>
         <% end %>
       </div>
    </div>
    <div class="row">
       <div class="column grid_3">
         <h3>my challenges</h3>
         <% current_user.challenges.each do |c| %>
          <p>
          <span><%= "#{c.name} #{c.feats.size}" %></span>
          </p>
         <% end %>
       </div>
    </div>
  <% end %>
  </div>
</div>
<div class="row">
  <% unless Page.all.first.nil? %>
    <%= navigation :footer %>
  <% end %>
</div>
</body>
</html>
